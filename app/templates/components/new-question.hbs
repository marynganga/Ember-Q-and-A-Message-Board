{{#if newQuestionForm}}
	<div class="formSection">
	<img src="images/icons8-Ask Question-64.png">
		<form class="container-fluid">
			<div class="form-group">
				<label for="content">Question:</label>
				{{input type="text" value=content class="form-control" id="content"}}
			</div>

			<div class="form-group">
				<label for="author">Author:</label>
				{{input type="text" value=author class="form-control" id="author"}}
			</div>

			<div class="form-group">
				<label for="notes">Additional Notes:</label>
				{{textarea value=notes class="form-control" id="notes"}}
			</div>
			<button {{action 'saveQuestion'}} class="btn btn-success saveButton">Save</button>
			<button {{action 'closeQuestionForm'}} class="btn btn-danger closeButton">Close</button>
		</form>
	</div>
{{else}}

		<button {{action 'addQuestionClicked'}} class="button">Ask a question<img src="images/icons8-Ask Question-64.png"></button>
{{/if}}

