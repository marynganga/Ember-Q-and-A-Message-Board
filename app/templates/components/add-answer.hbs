{{#if newAnswerForm}}
	<h2> Add a new Answer</h2>
	<form>
		<div class="form-group">
			<label for="content">Answer:</label>
			{{input type="text" value=content class="form-control" id="content"}}
		</div>

		<div class="form-group">
			<label for="author">Author:</label>
			{{input type="text" value=author class="form-control" id="author"}}
		</div>

		<button {{action 'saveAnswer'}} class="btn-sm btn-info">Save</button>
		<button {{action 'closeAnswerForm'}} class="btn-sm btn-danger">Close</button>

	</form>
{{else}}

		<button {{action 'addAnswerClicked'}} class="btn-sm btn-info">Add answer</button>
{{/if}}

